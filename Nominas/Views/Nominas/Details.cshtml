@model Nominas.Nomina

@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>

<div>
    <h4>Nomina</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Codigo_Nomina)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Codigo_Nomina)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Empleado.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Empleado.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Empleado.Apellido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Empleado.Apellido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fecha)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sueldo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sueldo)
        </dd>

        @foreach (var ret in Model.Retencion)
        {
            <dt>
                @Html.DisplayName(ret.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => ret.Cantidad)
            </dd>
        }

    </dl>
</div>

@if (User.IsInRole("Contable"))
{
    <p>
        @Html.ActionLink("Editar", "Edit", new { id = Model.Codigo_Nomina }) |
        @Html.ActionLink("Volver a la Lista", "Index")
    </p>
}
else
{
    @Html.ActionLink("Volver a la Lista", "Index")
}
